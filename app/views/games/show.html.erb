

<h2><%= @game.name %>

  <% if Favorite.find_by(user: current_user, game: @game) %>
    <%= link_to "&#9733".html_safe, remove_favorite_game_path(@game), method: :delete, class: "fav" %>
    <% else %>
      <%= link_to "&#9734".html_safe, add_favorite_game_path(@game), method: :post, class: "no-fav" %>
    <% end %>
</h2>
  <br>
  <strong>Category: </strong><%= @game.category %>
  <br>
  <strong>Equipment: </strong><%= @game.equipment %>
  <br>
  <strong>Number of Players: </strong><%= @game.num_players %>
  <br>
  <strong>Number of Teams: </strong><%= @game.num_teams %>
  <br>
  <strong>Duration: </strong><%= @game.game_duration %> minutes
  <br>

  <%= image_tag @game.image_url, :class => "show_image" %>
  <br>
  <br>
  <strong>Description: </strong><%= @game.description %>
  <br>
  <br>

  <% if current_user == @game.user %>
    <%= link_to "", edit_game_path(@game), :class => "glyphicon glyphicon-pencil btn btn-warning btn-sm" %>
  <% end %>

  <% if current_user == @game.user %>
    <%= link_to "", @game, method: :delete, :class => 'glyphicon glyphicon-remove btn btn-danger btn-sm' %>
  <% end %>
