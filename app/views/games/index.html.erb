

<%= form_tag games_path, :method => 'get' do %>
  <p>
    <%= select_tag :category, options_for_select(["Active", "Cards", "Party", "Car", "Play-along"])%>
    <%= submit_tag "Search by category", :name => nil %>
  </p>
<% end %>

<%= link_to "Create a game", new_game_path %>

<ul>
  <% @games.each do |game| %>
    <li><%= link_to game.name, game %></li>
  <% end %>
</ul>
