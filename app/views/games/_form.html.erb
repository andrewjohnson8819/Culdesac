
<%= form_for @game do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :category %>
  <%= f.select :category, [ ["Active", "Active"], ["Cards", "Cards"], ["Party", "Party"], ["Car", "Car"], ["Play-along", "Play-along"] ] %>
  <%= f.label :equipment %>
  <%= f.text_field :equipment %>
  <%= f.label :number_of_players %>
  <%= f.text_field :num_players %>
  <%= f.label :number_of_teams %>
  <%= f.text_field :num_teams %>
  <%= f.label :game_duration %>
  <%= f.text_field :game_duration %> minutes
  <%= f.label :image_url %>
  <%= f.text_field :image_url %>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <%= f.submit %>
<% end %>
